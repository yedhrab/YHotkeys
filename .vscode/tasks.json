    "version": "2.0.0",
    "tasks": [
        {
            "label": "‚ñ∂Ô∏è Run AHK Project",
            "type": "shell",
            "windows": {
                "command": "\"C:\\Program Files\\AutoHotkey\\AutoHotkey.exe\""
            },
            "args": [
                "${workspaceFolder}/src/YHotkeys.ahk"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": true,
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "üìÉ Run AHK file",
            "type": "shell",
            "windows": {
                "command": "\"C:\\Program Files\\AutoHotkey\\AutoHotkey.exe\""
            },
            "args": [
                "${file}"
            ],
            "group": "build",
            "isBackground": true,
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "üèóÔ∏è Build AHK",
            "type": "shell",
            "command": "\"C:\\Program Files\\AutoHotkey\\Compiler\\Ahk2Exe.exe\"",
            "args": [
                "/in",
                "${workspaceFolder}/src/YHotkeys.ahk",
                "/out",
                "${workspaceFolder}/src/YHotkeys.exe",
                "/icon",
                "${workspaceFolder}/src/res/seedling.ico"
            ],
            "group": "build",
            "isBackground": true,
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "üí• Clear All AHKs",
            "type": "shell",
            "command": "taskkill",
            "args": [
                "/im",
                "autohotkey.exe"
            ],
            "group": "build",
            "isBackground": true,
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "üßπ Clear AHK Project",
            "type": "shell",
            "command": "wmic",
            "args": [
                "process",
                "where",
                "\"commandline like '%%YHotkeys.ahk'\"",
                "delete"
            ],
            "group": "build",
            "isBackground": true,
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "üßº Clear AHK File",
            "type": "shell",
            "command": "wmic",
            "args": [
                "process",
                "where",
                "\"commandline like '%%${fileBasename}'\"",
                "delete"
            ],
            "group": "build",
            "isBackground": true,
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        }
    ]
}
